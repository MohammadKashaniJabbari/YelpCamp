<% layout('layouts/boilerplate')%>
    <h1>Edit CampGround</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=put" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" placeholder="CampGround Title"
                value="<%= campground.title %>" required>
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" placeholder="CampGround Location"
                value="<%= campground.location %>" required>
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]" placeholder="CampGround Price"
                value="<%= campground.price %>" required>
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="campground[description]" placeholder="CampGround Description"
                value="<%= campground.description %>" required>
        </div>
        <button type="submit">Update CampGround</button>
    </form>
    <footer>
        <a href="/campgrounds/<%= campground._id %>">Back to CampGround</a>
    </footer>